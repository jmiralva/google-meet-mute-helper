{
  "manifest_version": 3,
  "name": "Google Meet Mute Helper",
  "version": "1.2.0",
  "description": "Hides the 'Microphone muted by system' popup and auto-unmutes when Meet tries to mute you",
  "permissions": [],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
